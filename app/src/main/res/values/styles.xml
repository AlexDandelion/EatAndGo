<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FragmentsHeader" parent="TextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fragments_header_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayoutSettingsTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/settings_internal_layouts_margin</item>
    </style>

</resources>
