<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/schedule_item_layout_margin_vertical"
    android:layout_marginLeft="@dimen/schedule_item_layout_margin_horizontal"
    android:layout_marginRight="@dimen/schedule_item_layout_margin_horizontal"
    android:layout_marginTop="@dimen/schedule_item_layout_margin_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardElevation="@dimen/card_view_elevation"
        card:cardUseCompatPadding="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_view_table_layout_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@mipmap/ic_fish" />

                    <TextView
                        android:id="@+id/scheduleFoodWeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/food_weight_text_view"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/card_view_titles_text_size" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@mipmap/ic_alarm" />

                    <TextView
                        android:id="@+id/scheduleFeedingTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/feeding_time_text_view"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/card_view_titles_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/scheduleFoodWeightEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/food_weight_edit_text_hint"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/scheduleFeedingTimeEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/feeding_time_edit_text_hint"
                        android:inputType="time" />
                </LinearLayout>
            </LinearLayout>
        </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>