<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_layout_margin_vertical"
    android:layout_marginTop="@dimen/card_view_layout_margin_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/statisticsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardBackgroundColor="@android:color/transparent"
        card:cardElevation="@dimen/card_view_elevation"
        card:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_linear_layout_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statisticsType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/statistics_name" />

            <TextView
                android:id="@+id/statisticsWeight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/statistics_weight" />

            <TextView
                android:id="@+id/statisticsTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/statistics_period" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>